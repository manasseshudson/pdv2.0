<script>
$(document).ready(function () {

  // Inicializa DataTable UMA ÚNICA VEZ
  var table = $('#example2').DataTable({
    paging      : true,
    lengthChange: false,
    searching   : true,
    ordering    : false,
    info        : true,
    autoWidth   : false
  });

  // Filtro por intervalo de datas
  $.fn.dataTable.ext.search.push(function (settings, data) {

    let inicio = $('#dataInicio').val();
    let fim = $('#dataFim').val();
    let dataTabela = data[3]; // coluna Data

    if (!dataTabela) return true;

    // Converte data da tabela (DD/MM/YYYY)
    let partes = dataTabela.split('/');
    let dataLinha = new Date(partes[2], partes[1] - 1, partes[0]);

    // Converte inputs
    let dataInicio = inicio ? new Date(inicio + 'T00:00:00') : null;
    let dataFim = fim ? new Date(fim + 'T23:59:59') : null;

    if (
      (!dataInicio || dataLinha >= dataInicio) &&
      (!dataFim || dataLinha <= dataFim)
    ) {
      return true;
    }

    return false;
  });

  // Botão FILTRAR
  $('#btnFiltrar').on('click', function () {
    table.draw();
  });

  // Botão LIMPAR
  $('#btnLimpar').on('click', function () {
    $('#dataInicio').val('');
    $('#dataFim').val('');
    table.draw();
  });

});
</script>

