			<div class="col-lg-6 col-xs-6">
				<div class="small-box bg-red">
					<div class="inner">
						<h3><%= valorSaidas %></h3>
						<p>Saidas</p>
					</div>
					<div class="icon">
						<i class="ion ion-pie-graph"></i>
					</div>
						<a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
					</div>
				</div>
			</div>
			<div class="row">
				<section class="col-lg-12 connectedSortable">
			<div class="box">
				<div class="box-header">
					<h3 class="box-title">Resumo de Entradas por Cond. Pagto</h3>
				</div>
				<div class="box-body">
					<table id="example2" class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>Condição de Pagamento</th>
                                <th>Total</th>
							</tr>
						</thead>
						<tbody>
							<% relatorioCondipagto.forEach(dados=>{ %>
								<tr style="background-color:#ccc">
									
									<td><%= dados.condicao_pagamento %></td>
									<td><%= dados.total %></td>
								  </tr>
								<% }) %>
						</tbody>
					</table>
				</div>
			</div>
			<div class="box">
				<div class="box-header">
					<h3 class="box-title">Lançamentos do Dia</h3>
				</div>
				<div class="box-body">
					<table id="example2" class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>Funcionário</th>
								<th>Cliente</th>
								<th>Documento</th>
								<th>Descrição</th>
								<th>Valor</th>
								<th>Data</th>
								<th>Condição Pagto.</th>
							</tr>
						</thead>
						<tbody>
							<% lancamentos.forEach(dados=>{ %>
								<% if(dados.saidas=="1"){ %>
									<tr style="background-color: #dd4b39 !important">
											<td><%= dados.Funcionario %></td>
											<td><%= dados.nome %></td>
											<td><%= dados.documento %></td>
											<td><%= dados.descricao %></td>
											<td><%= dados.valor %></td>
											<td><%= dados.data_externa %></td>
											<td><%= dados.condicao_pagamento %></td>
										</tr>
							
								<% }else{ %>
									<%if(dados.descricao=="ABERTURA DE CAIXA"){ %>
										<tr style="background-color: #00c0ef !important">
											<td><%= dados.Funcionario %></td>
											<td><%= dados.nome %></td>
											<td><%= dados.documento %></td>
											<td><%= dados.descricao %></td>
											<td><%= dados.valor %></td>
											<td><%= dados.data_externa %></td>
											<td><%= dados.condicao_pagamento %></td>
										</tr>
									<% }else{ %>
										<tr >
											<td><%= dados.Funcionario %></td>
											<td><%= dados.nome %></td>
											<td><%= dados.documento %></td>
											<td><%= dados.descricao %></td>
											<td><%= dados.valor %></td>
											<td><%= dados.data_externa %></td>
											<td><%= dados.condicao_pagamento %></td>
										</tr>
									
									<% } %>
								<% } %>
							<% }) %>
						</tbody>
					</table>
				</div>
